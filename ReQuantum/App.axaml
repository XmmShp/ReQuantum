<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:generated="clr-namespace:ReQuantum.Generated"
             x:Class="ReQuantum.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <generated:GeneratedViewLocator/>
    </Application.DataTemplates>

     <Application.Resources>
         <ResourceDictionary>
             <ResourceDictionary.MergedDictionaries>
                 <ResourceInclude Source="/Controls/Calendar/MonthCalendarControl.axaml" />
                 <ResourceInclude Source="/Controls/Calendar/WeekCalendarControl.axaml" />
             </ResourceDictionary.MergedDictionaries>

             <FontFamily x:Key="SourceHanSansCn">/Assets/Fonts/SourceHanSansCN.ttf#Source Han Sans CN</FontFamily>
             <FontFamily x:Key="NotoSans">/Assets/Fonts/NotoSans.ttf#Noto Sans</FontFamily>
         </ResourceDictionary>
     </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <Style Selector=":is(TemplatedControl)">
            <Setter Property="FontFamily" Value="{StaticResource SourceHanSansCn}"/>
        </Style>
        <StyleInclude Source="avares://IconPacks.Avalonia.Material/Material.axaml" />
    </Application.Styles>
</Application>