<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ReQuantum.ViewModels"
             xmlns:entities="clr-namespace:ReQuantum.Modules.Calendar.Entities"
             xmlns:presentations="clr-namespace:ReQuantum.Modules.Calendar.Presentations"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="ReQuantum.Views.NoteListView"
             x:DataType="viewModels:NoteListViewModel">
  <Design.DataContext>
    <viewModels:NoteListViewModel />
  </Design.DataContext>

  <Grid>
      <Grid.Styles>
          <Style Selector="TextBlock">
              <Setter Property="Effect" Value="{x:Null}" />
          </Style>
      </Grid.Styles>
      <!-- 便签区域 -->
    <Border BorderThickness="2"
            Background="{DynamicResource RegionBackgroundBrush}"
            BorderBrush="{DynamicResource NoteBorderBrush}"
            CornerRadius="8"
            Padding="16">
      <StackPanel Spacing="12">
        <Grid ColumnDefinitions="*,Auto">
          <TextBlock Grid.Column="0"
                   Text="{Binding Localizer[Notes]}" 
                   FontSize="18" 
                   FontWeight="SemiBold"
                   VerticalAlignment="Center"/>
          <Button Grid.Column="1"
                Command="{Binding ShowAddDialogCommand}"
                Padding="12,6">
            <StackPanel Orientation="Horizontal" Spacing="4">
              <TextBlock Text="+" FontSize="16" FontWeight="Bold"/>
              <TextBlock Text="{Binding Localizer[AddNote]}" FontSize="14"/>
            </StackPanel>
          </Button>
        </Grid>

        <!-- 便签列表 -->
        <ItemsControl ItemsSource="{Binding Notes}">
          <ItemsControl.ItemTemplate>
            <DataTemplate DataType="entities:CalendarNote">
              <Border BorderThickness="1"
                      BoxShadow="5 5 10 0 #40000000"
                      CornerRadius="18"
                      Padding="12"
                      Margin="0,4,5,4"
                      Background="{Binding NoteId,Converter={x:Static presentations:CalendarConverters.NoteIdToBackgroundConverter}}">
                  <Border.Styles>
                      <Style Selector="Border">
                          <Setter Property="Transitions" Value="{x:Null}" />
                          <Style.Animations>
                              <Animation Duration="0:0:0.5" FillMode="Forward" Easing="CubicEaseOut">
                                  <KeyFrame KeyTime="0:0:0">
                                      <Setter Property="Opacity" Value="0"/>
                                      <Setter Property="TranslateTransform.Y" Value="20"/>
                                  </KeyFrame>
                                  <KeyFrame KeyTime="0:0:0.5">
                                      <Setter Property="Opacity" Value="1"/>
                                      <Setter Property="TranslateTransform.Y" Value="0"/>
                                  </KeyFrame>
                              </Animation>
                          </Style.Animations>
                      </Style>
                  </Border.Styles>
                  <Grid ColumnDefinitions="*,Auto">
                  <TextBlock Grid.Column="0" 
                           Text="{Binding Content}" 
                           FontSize="14"
                           FontWeight="Bold"
                           TextWrapping="Wrap"/>
                  <Button Grid.Column="1" 
                        Command="{Binding ((viewModels:NoteListViewModel)DataContext).DeleteNoteCommand, 
                          RelativeSource={RelativeSource AncestorType=UserControl},
                          FallbackValue={x:Null}}"
                        CommandParameter="{Binding}"
                        Padding="8,4"
                        Background="{DynamicResource ButtonBrush}">
                    <TextBlock Text="{Binding ((viewModels:NoteListViewModel)DataContext).Localizer[Delete], 
                        RelativeSource={RelativeSource AncestorType=UserControl},
                        FallbackValue=Delete}" FontSize="12"/>
                  </Button>
                </Grid>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- 空状态提示 -->
        <TextBlock Text="{Binding Localizer[NoNotes]}"
                 Opacity="0.5"
                 HorizontalAlignment="Center"
                 Margin="0,16"
                 IsVisible="{Binding !Notes.Count}"/>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
