<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ReQuantum.ViewModels"
             xmlns:entities="clr-namespace:ReQuantum.Modules.Calendar.Entities"
             xmlns:presentations="clr-namespace:ReQuantum.Modules.Calendar.Presentations"
             xmlns:iconPacks="https://github.com/MahApps/IconPacks.Avalonia"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="ReQuantum.Views.EventListView"
             x:DataType="presentations:EventListViewModel">
  <Design.DataContext>
    <presentations:EventListViewModel />
  </Design.DataContext>

  <Grid>
    <!-- 日程区域 -->
    <Border BorderThickness="2"
            Background="{DynamicResource RegionBackgroundBrush}"
            BorderBrush="{DynamicResource EventBorderBrush}"
            CornerRadius="8"
            Padding="16">
      <StackPanel Spacing="12">



          <Grid ColumnDefinitions="*,Auto">
          <TextBlock Grid.Column="0"
                   Text="{Binding EventsTitle.Text}"
                   Foreground="{DynamicResource PrimaryTextBrush}"
                   FontSize="18"
                   FontWeight="SemiBold"
                   VerticalAlignment="Center"/>

          <Button Grid.Column="1" 
                  Click="UnfoldList">
              <iconPacks:PackIconMaterial Kind="DotsVertical" />
              <Button.ContextMenu>
                  <ContextMenu>
                      <MenuItem Header="{Binding AddEventText}"
                                Command="{Binding ShowAddDialogCommand}"></MenuItem>

                      <MenuItem Header="{Binding SyncCoursesTableText}"
                                Command="{Binding SyncZdbkScheduleCommand}"
                                IsVisible="{Binding ShowZdbkSyncButton}"></MenuItem>

                      <MenuItem Header="{Binding SyncPTAText}"
                                Command="{Binding SyncPtaCommand}"
                                IsVisible="{Binding ShowPtaSyncButton}"></MenuItem>
                  </ContextMenu>
                  
              </Button.ContextMenu>
          </Button>

        </Grid>

        <!-- 日程列表 -->
        <ItemsControl ItemsSource="{Binding Events}">
          <ItemsControl.ItemTemplate>
            <DataTemplate DataType="entities:CalendarEvent">
              <Border  BorderThickness="1"
                      Background="{DynamicResource LightEventBrush}"
                      CornerRadius="4"
                      Padding="12"
                      Margin="0,4">
                <Grid ColumnDefinitions="*,Auto">
                  <StackPanel Grid.Column="0" Spacing="4">
                    <TextBlock Text="{Binding Content}" 
                             FontSize="14"
                             TextWrapping="Wrap"
                             FontWeight="Medium"/>
                    <TextBlock FontSize="12" Opacity="0.7">
                      <Run Text="{Binding StartTime, StringFormat='yyyy-MM-dd HH:mm'}"/>
                      <Run Text=" - "/>
                      <Run Text="{Binding EndTime, StringFormat='yyyy-MM-dd HH:mm'}"/>
                    </TextBlock>
                  </StackPanel>
                  <Button Grid.Column="1" 
                        Command="{Binding ((presentations:EventListViewModel)DataContext).DeleteEventCommand,
                            RelativeSource={RelativeSource AncestorType=UserControl},
                            FallbackValue={x:Null}}"
                        CommandParameter="{Binding}"
                        Padding="8,4"
                        VerticalAlignment="Top">
                    <TextBlock Text="{Binding ((presentations:EventListViewModel)DataContext).Localizer[Delete],
                                        RelativeSource={RelativeSource AncestorType=UserControl}, 
                                        FallbackValue=Delete}" 
                               FontSize="12"/>
                  </Button>
                </Grid>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- 空状态提示 -->
        <TextBlock Text="{Binding Localizer[NoEvents]}"
                 Opacity="0.5"
                 HorizontalAlignment="Center"
                 Margin="0,16"
                 IsVisible="{Binding !Events.Count}"/>

        <!-- 同步错误信息 -->
        <Border BorderThickness="1"
                BorderBrush="Orange"
                CornerRadius="8"
                Padding="16"
                Margin="0,12,0,0"
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                IsVisible="{Binding ShowSyncError}">
          <StackPanel Spacing="12">
            <Grid ColumnDefinitions="*,Auto">
              <TextBlock Grid.Column="0"
                         FontSize="14"
                         FontWeight="SemiBold"
                         Foreground="Orange">
                <Run Text="⚠️ "/>
                <Run Text="{Binding Localizer[SyncErrorOccurred]}"/>
              </TextBlock>
              <Button Grid.Column="1"
                      Command="{Binding CloseSyncErrorCommand}"
                      Padding="4"
                      Background="Transparent">
                <TextBlock Text="✕" FontSize="12"/>
              </Button>
            </Grid>

            <ScrollViewer MaxHeight="200"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
              <TextBlock Text="{Binding SyncErrorMessage}"
                         FontFamily="Consolas"
                         FontSize="12"
                         TextWrapping="Wrap"
                         Opacity="0.8"/>
            </ScrollViewer>
          </StackPanel>
        </Border>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
