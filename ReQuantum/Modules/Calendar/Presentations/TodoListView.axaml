<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ReQuantum.ViewModels"
             xmlns:entities="clr-namespace:ReQuantum.Modules.Calendar.Entities"
             xmlns:presentations="clr-namespace:ReQuantum.Modules.Calendar.Presentations"
             xmlns:iconPacks="https://github.com/MahApps/IconPacks.Avalonia"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="ReQuantum.Views.TodoListView"
             x:DataType="viewModels:TodoListViewModel">
  <Design.DataContext>
    <viewModels:TodoListViewModel />
  </Design.DataContext>

  <Grid>
    <!-- å¾…åŠžåŒºåŸŸ -->
    <Border BorderThickness="1"
            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
            CornerRadius="8"
            Padding="16">
      <StackPanel Spacing="12">
        <Grid ColumnDefinitions="*,Auto">
          <TextBlock Grid.Column="0"
                   Text="{Binding Localizer[Todos]}" 
                   FontSize="18" 
                   FontWeight="SemiBold"
                   VerticalAlignment="Center"/>
          <Button Grid.Column="1" 
                  Click="UnfoldList"
                  Background="White">
              <iconPacks:PackIconMaterial Kind="DotsVertical" />
              <Button.ContextMenu>
                  <ContextMenu>
                      <!-- å­¦åœ¨æµ™å¤§åŒæ­¥æŒ‰é’® -->
                      <MenuItem Header="ðŸ”{Binding Localizer[SyncCoursesZju]}"
                                FontSize="14"
                                Command="{Binding SyncCoursesZjuTodosCommand}"
                                IsVisible="{Binding ShowCoursesZjuSyncButton}"></MenuItem>

                      <MenuItem Header="âž•{Binding Localizer[AddTodo]}"
                                Command="{Binding ShowAddDialogCommand}"></MenuItem>
                  </ContextMenu>
                  
              </Button.ContextMenu>
          </Button>

        </Grid>

        <!-- å¾…åŠžåˆ—è¡¨ -->
        <ItemsControl ItemsSource="{Binding Todos}">
          <ItemsControl.ItemTemplate>
            <DataTemplate DataType="entities:CalendarTodo">
              <Border BorderThickness="1"
                      BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                      CornerRadius="4"
                      Padding="12"
                      Margin="0,4">
                <Grid ColumnDefinitions="Auto,*,Auto">
                  <CheckBox Grid.Column="0" 
                          IsChecked="{Binding IsCompleted, FallbackValue=False, Mode=OneWay}"
                          Command="{Binding ((viewModels:TodoListViewModel)DataContext).ToggleTodoCompleteCommand,
                            RelativeSource={RelativeSource AncestorType=UserControl},
                            FallbackValue={x:Null}}"
                          CommandParameter="{Binding}"
                          VerticalAlignment="Center"
                          Margin="0,0,8,0"/>
                  <StackPanel Grid.Column="1" Spacing="4">
                    <TextBlock Text="{Binding Content}" 
                             FontSize="14"
                             TextWrapping="Wrap"
                             FontWeight="Medium"
                             TextDecorations="{Binding IsCompleted, Converter={x:Static presentations:BoolToStrikethroughConverter.Instance}}"/>
                    <TextBlock FontSize="12" Opacity="0.7">
                      <Run Text="{Binding ((viewModels:TodoListViewModel)DataContext).Localizer[DueTime],
                        RelativeSource={RelativeSource AncestorType=UserControl},
                        FallbackValue=DueTime}"/>
                      <Run Text=": "/>
                      <Run Text="{Binding DueTime, StringFormat='yyyy-MM-dd HH:mm'}"/>
                    </TextBlock>
                  </StackPanel>
                  <Button Grid.Column="2" 
                        Command="{Binding ((viewModels:TodoListViewModel)DataContext).DeleteTodoCommand,
                          RelativeSource={RelativeSource AncestorType=UserControl},
                          FallbackValue={x:Null}}"
                        CommandParameter="{Binding}"
                        Padding="8,4">
                    <TextBlock Text="{Binding ((viewModels:TodoListViewModel)DataContext).Localizer[Delete],
                        RelativeSource={RelativeSource AncestorType=UserControl},
                        FallbackValue=Delete}" FontSize="12"/>
                  </Button>
                </Grid>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- ç©ºçŠ¶æ€æç¤º -->
        <TextBlock Text="{Binding Localizer[NoTodos]}"
                 Opacity="0.5"
                 HorizontalAlignment="Center"
                 Margin="0,16"
                 IsVisible="{Binding !Todos.Count}"/>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>
