<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ReQuantum.ViewModels"
             xmlns:converters="clr-namespace:ReQuantum.Modules.CourseSelection.Presentations"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="ReQuantum.Views.CourseSelectionView"
             x:Name="CourseSelectionViewRoot"
             x:DataType="viewModels:CourseSelectionViewModel">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollBarVisibility="Auto">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header and Login Status -->
        <StackPanel Grid.Row="0" Spacing="10" Margin="0,0,0,20">
            <TextBlock Text="{Binding Localizer[CoursesSelection]}"
                       FontSize="28"
                       FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="{Binding Localizer[LoginStatus]}" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding IsLoggedIn, Converter={x:Static converters:CourseSelectionConverters.BoolToStatusConverter}}"
                           Foreground="{Binding IsLoggedIn, Converter={x:Static converters:CourseSelectionConverters.BoolToColorConverter}}"/>
                <Button Content="{Binding Localizer[Refresh]}"
                        Command="{Binding RefreshLoginStatusCommand}"
                        Padding="8,4"
                        Margin="10,0,0,0"/>
                <Button Content="åˆ‡æ¢è°ƒè¯•çŠ¶æ€"
                        Command="{Binding ChangeDebugStatusCommand}"></Button>
            </StackPanel>

            <!-- Debug Info Panel -->
            <Border Background="#E3F2FD"
                    BorderBrush="#2196F3"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    IsVisible="{Binding IsDebug}">
                <StackPanel Spacing="4">
                    <TextBlock Text="è°ƒè¯•ä¿¡æ¯" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="{Binding DebugInfo}"
                               FontFamily="Consolas,Menlo,Monaco,Courier New,monospace"
                               FontSize="11"
                               Foreground="#333"/>
                </StackPanel>
            </Border>

            <!-- Not Logged In Warning -->
            <Border Background="#FFF3CD"
                    BorderBrush="#FFC107"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    IsVisible="{Binding !IsLoggedIn}">
                <TextBlock Text="è¯·å…ˆç™»å½• ZJU SSO æ‰èƒ½ä½¿ç”¨é€‰è¯¾åŠŸèƒ½"
                           Foreground="#856404"
                           FontWeight="SemiBold"/>
            </Border>
        </StackPanel>

        <!-- Statistics Panel -->
        <Grid Grid.Row="1" Margin="0,0,0,20" IsVisible="{Binding IsLoggedIn}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Selected Courses Statistics -->
            <Border Grid.Column="0"
                    Background="#55E3F2FD"
                    BorderBrush="#2196F3"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="16"
                    Margin="0,0,10,0">
                <StackPanel Spacing="8">
                    <TextBlock Text="{Binding Localizer[SelectedCourses]}" FontWeight="Bold" FontSize="16"/>
                    <StackPanel Orientation="Horizontal" Spacing="20">
                        <StackPanel>
                            <TextBlock Text="{Binding Localizer[CoursesCount]}" FontSize="12" Foreground="#666"/>
                            <TextBlock Text="{Binding SelectedCoursesCount}" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="{Binding Localizer[Credits]}" FontSize="12" Foreground="#666"/>
                            <TextBlock Text="{Binding SelectedCredits, StringFormat={}{0:F1}}" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                        <Button Content="{Binding Localizer[Refresh]}"
                                Command="{Binding RefreshSelectedCoursesCommand}"
                                Padding="8,4"
                                VerticalAlignment="Bottom"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Graduation Requirements Statistics -->
            <Border Grid.Column="1"
                    Background="#55F3E5F5"
                    BorderBrush="#9C27B0"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="16"
                    Margin="10,0,0,0">
                <StackPanel Spacing="8">
                    <TextBlock Text="{Binding Localizer[GraduationRequirements]}" FontWeight="Bold" FontSize="16"/>
                    <StackPanel Orientation="Horizontal" Spacing="20">
                        <StackPanel>
                            <TextBlock Text="{Binding Localizer[CompletedCourses]}" FontSize="12" Foreground="#666"/>
                            <TextBlock FontSize="20" FontWeight="Bold">
                                <Run Text="{Binding CompletedCourses}"/>
                                <Run Text="/" FontSize="16"/>
                                <Run Text="{Binding TotalRequiredCourses}" FontSize="16"/>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="{Binding Localizer[EarnedCredits]}" FontSize="12" Foreground="#666"/>
                            <TextBlock Text="{Binding CompletedCredits, StringFormat={}{0:F1}}" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                        <Button Content="{Binding Localizer[Refresh]}"
                                Command="{Binding RefreshGraduationRequirementsCommand}"
                                Padding="8,4"
                                VerticalAlignment="Bottom"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="2" IsVisible="{Binding IsLoggedIn}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Course Category and List -->
            <Border Grid.Column="0"
                    BorderBrush="{DynamicResource RegionBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="16"
                    Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Category Selection -->
                    <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,16">
                        <TextBlock Text="{Binding Localizer[CourseCategories]}" FontWeight="SemiBold"/>
                        <ComboBox ItemsSource="{Binding CourseCategories}"
                                  SelectedItem="{Binding SelectedCategory}"
                                  HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!-- Loading Indicator -->
                    <ProgressBar Grid.Row="1"
                                 IsIndeterminate="True"
                                 IsVisible="{Binding IsLoadingCourses}"
                                 Margin="0,0,0,8"/>

                    <!-- Course List -->
                    <ListBox Grid.Row="2"
                             ItemsSource="{Binding AvailableCourses}"
                             SelectedItem="{Binding SelectedCourse}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Spacing="4" Margin="0,4">
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="SemiBold"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Code}"
                                               FontSize="12"
                                               Foreground="{DynamicResource SmallTextBrush}"/>
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <TextBlock FontSize="12" x:CompileBindings="False">
                                            <Run x:CompileBindings="False"
                                                 Text="{Binding DataContext.Localizer[Credits], RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                            <Run Text="{Binding Credits}" FontWeight="SemiBold"/>
                                        </TextBlock>
                                        <TextBlock FontSize="12" x:CompileBindings="False">
                                            <Run x:CompileBindings="False"
                                                 Text="{Binding DataContext.Localizer[ClassSections], RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                            <Run Text="{Binding Sections.Count}" FontWeight="SemiBold"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="8"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource RegionBorderBrush}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            </Style>
                            <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                <Setter Property="Background" Value="{DynamicResource SidebarSelectedHoverBrush}"/>
                            </Style>
                            <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="{DynamicResource SidebarSelectedHoverBrush}"/>
                            </Style>
                        </ListBox.Styles>
                    </ListBox>

                    <!-- Pagination -->
                    <StackPanel Grid.Row="3"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Spacing="10"
                                Margin="0,16,0,0">
                        <Button Content="{Binding Localizer[PreviousPage]}"
                                Command="{Binding PreviousPageCommand}"
                                IsEnabled="{Binding HasPreviousPage}"
                                Padding="12,6"/>
                        <TextBlock Text="{Binding CurrentPageText}"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"/>
                        <Button Content="{Binding Localizer[NextPage]}"
                                Command="{Binding NextPageCommand}"
                                IsEnabled="{Binding HasNextPage}"
                                Padding="12,6"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Right Panel: Section Details -->
            <Border Grid.Column="1"
                    BorderBrush="{DynamicResource RegionBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="16"
                    Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Selected Course Info -->
                    <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,16">
                        <TextBlock Text="{Binding Localizer[ClassSectionDetails]}" FontWeight="SemiBold" FontSize="16"/>
                        <TextBlock Text="{Binding SelectedCourse.Name}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap"
                                   IsVisible="{Binding SelectedCourse, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                        <TextBlock Text="{Binding Localizer[SelectFromLeft]}"
                                   FontSize="14"
                                   Foreground="{DynamicResource SmallTextBrush}"
                                   IsVisible="{Binding SelectedCourse, Converter={x:Static ObjectConverters.IsNull}}"/>
                    </StackPanel>

                    <!-- Loading Indicator -->
                    <ProgressBar Grid.Row="1"
                                 IsIndeterminate="True"
                                 IsVisible="{Binding IsLoadingSections}"
                                 Margin="0,0,0,8"/>

                    <!-- Sections List -->
                    <TextBlock Grid.Row="2" IsVisible="{Binding IsNoSections}"
                               Text="{Binding Localizer[NoClassSections]}"></TextBlock>
                    <ScrollViewer Grid.Row="2">
                        <ItemsControl ItemsSource="{Binding Sections}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource RegionBorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="12"
                                            Margin="0,0,0,12"
                                            Background="{DynamicResource RegionBackgroundBrush}">
                                        <StackPanel Spacing="8">
                                            <!-- Section Header -->
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding Id}"
                                                           FontWeight="SemiBold"
                                                           FontSize="14"/>
                                                <Border Grid.Column="1"
                                                        Background="{DynamicResource NoteBrush}"
                                                        CornerRadius="3"
                                                        Padding="8,4">
                                                    <TextBlock Text="{Binding AvailableSeats, StringFormat=å‰©ä½™ {0}}"
                                                               Foreground="White"
                                                               FontSize="12"
                                                               FontWeight="SemiBold"/>
                                                </Border>
                                            </Grid>

                                            <!-- Section Details -->
                                            <StackPanel Spacing="6">
                                                <TextBlock FontSize="12" x:CompileBindings="False">
                                                    <Run x:CompileBindings="False"
                                                         Text="{Binding DataContext.Localizer[Teacher], RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                         Foreground="{DynamicResource SmallTextBrush}"/>
                                                    <Run Text="{Binding Instructors, Converter={x:Static converters:CourseSelectionConverters.CollectionToStringConverter}}"/>
                                                </TextBlock>

                                                <TextBlock FontSize="12" x:CompileBindings="False">
                                                    <Run x:CompileBindings="False"
                                                         Text="{Binding DataContext.Localizer[Capacity], RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                         Foreground="{DynamicResource SmallTextBrush}"/>
                                                    <Run Text="{Binding Capacity}"/>
                                                </TextBlock>

                                                <TextBlock FontSize="12" x:CompileBindings="False">
                                                    <Run x:CompileBindings="False"
                                                         Text="{Binding DataContext.Localizer[Waitlist], RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                         Foreground="{DynamicResource SmallTextBrush}"/>
                                                    <Run Text="{Binding TotalWaitingCount}"/>
                                                </TextBlock>

                                                <!-- Schedule and Location -->
                                                <ItemsControl ItemsSource="{Binding ScheduleLocationItems}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,2">
                                                                <TextBlock Text="ðŸ“…" FontSize="12"/>
                                                                <TextBlock Text="{Binding Schedule}" FontSize="12"/>
                                                                <TextBlock Text="@" FontSize="12" Foreground="#666"/>
                                                                <TextBlock Text="{Binding Location}" FontSize="12"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3"
                Background="{DynamicResource RegionBackgroundBrush}"
                BorderBrush="{DynamicResource RegionBorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="12,8"
                Margin="0,20,0,0">
            <TextBlock Text="{Binding StatusMessage}"
                       FontSize="12"
                       Foreground="#666"/>
        </Border>
    </Grid>
    </ScrollViewer>
</UserControl>
