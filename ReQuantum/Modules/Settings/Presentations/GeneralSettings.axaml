<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ReQuantum.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ReQuantum.Views.GeneralSettingsView"
             x:DataType="viewModels:GeneralSettingsViewModel">
    <Design.DataContext>
        <viewModels:GeneralSettingsViewModel />
    </Design.DataContext>
    <StackPanel Spacing="20">
        <StackPanel Spacing="10">
            <Grid ColumnDefinitions="*, Auto">
                <TextBlock Text="{Binding Localizer[Theme]}" VerticalAlignment="Center"/>
                <ListBox Grid.Column="1" 
                         ItemsSource="{Binding ThemeOptions}" 
                         SelectedItem="{Binding SelectedThemeOption}"
                         Background="Transparent"
                         HorizontalAlignment="Right">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.Styles>
                        <Style Selector="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Template">
                                <ControlTemplate x:CompileBindings="False">
                                    <RadioButton Content="{Binding Name.Text}"
                                                 IsChecked="{Binding $parent[ListBoxItem].IsSelected, Mode=TwoWay}"
                                                 VerticalAlignment="Center"/>
                                </ControlTemplate>
                            </Setter>
                        </Style>
                    </ListBox.Styles>
                </ListBox>
            </Grid>
        </StackPanel>
    </StackPanel>
</UserControl>
